<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/light_background"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/Grey"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:id="@+id/header"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/menu"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/Store"
                    android:textSize="30sp"
                    android:textColor="@color/light_text"
                    android:gravity="center_vertical"
                    android:paddingStart="15sp"
                    android:paddingEnd="8sp"
                    android:textAlignment="gravity"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:columnCount="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="75dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="75dp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fishing_rod"
                        android:textColor="@color/dark_text"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="20dp"/>

                    <ImageButton
                        android:id="@+id/add_fishing_rod"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/plus"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="75dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="75dp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/hockey_stick"
                        android:textColor="@color/dark_text"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="20dp"/>

                    <ImageButton
                        android:id="@+id/add_hockey_stick"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/plus"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="75dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="75dp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/skates"
                        android:textColor="@color/dark_text"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="20dp"/>

                    <ImageButton
                        android:id="@+id/add_skates"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/plus"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="75dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="75dp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/running_shoes"
                        android:textColor="@color/dark_text"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="20dp"/>

                    <ImageButton
                        android:id="@+id/add_running_shoes"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/plus"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="75dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="75dp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/protein_bar"
                        android:textColor="@color/dark_text"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="20dp"/>

                    <ImageButton
                        android:id="@+id/add_protein_bar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/plus"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"/>

                </RelativeLayout>

            </GridLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_count"
                    android:textColor="@color/dark_text"
                    android:visibility="gone"
                    android:elevation="7dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="52dp"
                    android:gravity="center"
                    android:background="@drawable/circle_bubble"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/shopping_cart"
                    android:tint="@color/light_text"
                    android:elevation="100dp"
                    app:borderWidth="0dp"
                    android:background="@drawable/bubble"/>

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Grey"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/close_menu"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_close_black_24dp"
            android:backgroundTint="@color/light_text"
            android:layout_margin="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/save_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_cart"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:background="@color/Grey"
                android:textColor="@color/light_text"/>

            <Button
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textColor="@color/light_text"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@color/Grey"
                android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>