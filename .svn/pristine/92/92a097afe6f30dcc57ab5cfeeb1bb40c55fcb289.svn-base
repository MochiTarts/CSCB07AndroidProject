<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/light_background"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/Grey"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:id="@+id/header"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/menu"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/Checkout"
                    android:textSize="30sp"
                    android:textColor="@color/light_text"
                    android:gravity="center_vertical"
                    android:paddingStart="15sp"
                    android:paddingEnd="8sp"
                    android:textAlignment="gravity"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="100dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="40dp"
                android:columnCount="1">

                <TextView
                    android:id="@+id/total_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center_vertical"
                    android:text="@string/total_items"
                    android:textColor="@color/dark_text"
                    android:textSize="25sp"
                    android:drawableStart="@drawable/shopping_cart"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:drawablePadding="20dp"/>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_placeholder"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:weightSum="2">

                        <FrameLayout
                            android:id="@+id/attachment_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="@string/fishing_rod_purchase"
                        android:textColor="@color/light_text"
                        android:lineHeight="20dp"
                        app:layout_anchor="@id/attachment_layout"
                        app:layout_anchorGravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="25dp"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:weightSum="2">

                        <FrameLayout
                            android:id="@id/attachment_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@id/item_image"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_placeholder"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="@string/hockey_stick_purchase"
                        android:textColor="@color/light_text"
                        android:lineHeight="20dp"
                        app:layout_anchor="@id/attachment_layout"
                        app:layout_anchorGravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="25dp"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:weightSum="2">

                        <FrameLayout
                            android:id="@id/attachment_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@id/item_image"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_placeholder"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="@string/skates_purchase"
                        android:textColor="@color/light_text"
                        android:lineHeight="20dp"
                        app:layout_anchor="@id/attachment_layout"
                        app:layout_anchorGravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="25dp"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:weightSum="2">

                        <FrameLayout
                            android:id="@id/attachment_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@id/item_image"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_placeholder"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="@string/running_shoes_purchase"
                        android:textColor="@color/light_text"
                        android:lineHeight="20dp"
                        app:layout_anchor="@id/attachment_layout"
                        app:layout_anchorGravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="25dp"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:weightSum="2">

                        <FrameLayout
                            android:id="@id/attachment_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@id/item_image"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_placeholder"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="@string/protein_bar_purchase"
                        android:textColor="@color/light_text"
                        android:lineHeight="20dp"
                        app:layout_anchor="@id/attachment_layout"
                        app:layout_anchorGravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="25dp"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </GridLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:columnCount="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="@string/total_with_tax"
                    android:layout_gravity="center_vertical"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/dark_text"/>

                <Button
                    android:id="@+id/purchase"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:background="@drawable/bubble_dark"
                    android:layout_columnWeight="1"
                    android:text="@string/purchase"
                    android:layout_gravity="center_vertical"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/light_text"/>

            </GridLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Grey"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/close_menu"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_close_black_24dp"
            android:backgroundTint="@color/light_text"
            android:layout_margin="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/save_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_cart"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:background="@color/Grey"
                android:textColor="@color/light_text"/>

            <Button
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textColor="@color/light_text"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@color/Grey"
                android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>